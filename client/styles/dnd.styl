.is-dragging
  cursor grabbing
  user-select none

.board
  background rgb(0, 121, 191)
  min-height 100vh
  min-width 100vw
  display inline-flex

.deck
  display flex
  flex-direction column

.deck-container
  margin 8px
  display flex
  flex-direction column

.deck-header
  display flex
  align-items center
  justify-content center
  background-color lightblue
  transition background-color 0.1s ease

  &hover
    background-color #d9fcff

  &.isDragging
    background-color red

.card
  border-radius 2px
  border 1px solid grey
  background-color white

  /* cursor grabbing is handled by app */
  cursor grab
  box-shadow none
  padding 8px
  min-height 40px
  margin-bottom 8px
  user-select none
  transition background-color 0.1s ease

  /* anchor overrides */
  color black

  &hover
    color black
    text-decoration none

  &focus
    outline 2px solid purple

  /* flexbox */
  display flex
  align-items center


.ScrollContainer
  overflow-x hidden
  overflow-y: auto
  max-height: 300px

.DropZone
  /* stop the list collapsing when empty */
  min-height: 250px;
  /* not relying on the items for a margin-bottom
  as it will collapse when the list is empty */
  margin-bottom: 8px

.cardWrapper
  background-color black
  display flex
  flex-direction column
  opacity 0.5
  padding 8px
  padding-bottom 0
  transition background-color 0.1s ease, opacity 0.1s ease
  user-select none
  width 250px
